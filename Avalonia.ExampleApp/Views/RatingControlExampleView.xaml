<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Controls="clr-namespace:Avalonia.ExtendedToolkit.Controls;assembly=Avalonia.ExtendedToolkit"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Avalonia.ExampleApp.Views.RatingControlExampleView">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel Grid.Row="0">
        <StackPanel Orientation="Horizontal">
          <CheckBox Content="AllowHalf" IsChecked="{Binding ElementName=rating, Path=AllowHalf}" />
          <CheckBox Margin="10,0,0,0" Content="ShowText" IsChecked="{Binding ElementName=rating, Path=ShowText}" />
          <CheckBox Margin="10,0,0,0" Content="AllowClear" IsChecked="{Binding ElementName=rating, Path=AllowClear}" />
        </StackPanel>
        <TextBlock Margin="0,10,0,0" FontSize="20" Foreground="{DynamicResource MahApps.Brushes.Black}"  Text="AllowHalf does not work perfectly !!!"/>
    </StackPanel>


    <Controls:RatingControl Grid.Row="1" HorizontalAlignment="Center" x:Name="rating"
                Background="Gray" Foreground="{DynamicResource MahApps.Brushes.Accent}"/>
  
  
  </Grid>

</UserControl>
